@model UsokulluWeb.Model.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{ 
    var message = TempData["Message"] as TempDataDictionary;
    if (message != null)
    {
        <div class="alert @message["class"]"> @message["message"]</div>
    }
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Kategori Ekle</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

        

        <div class="form-group">
            @Html.LabelFor(model => model.Name,"Kategori Adı", htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
