@model UsokulluWeb.Model.Patients
@using UsokulluWeb.Model

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Hasta Ekle</h2>
Kan grubu eklenecek



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Patients</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.TcNo, "Tc", htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TcNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TcNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "İsim", htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Surname, "Soyisim", htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "E-posta", htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BirthDate, "Doğum Tarihi", htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Telephone, "Telefon", htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Address, "Adres", htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @{
            List<string> genders = new List<string>();
            genders.Add("Erkek");
            genders.Add("Kadın");
        }
        @Html.LabelFor(model => model.Gender, "Cinsiyet", htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Gender,
                              new SelectList(genders),
                                     "Cinsiyet")
        </div>
    </div>

    <div class="form-group">
        @{
            List<string> BloodGroups = new List<string>();
            BloodGroups.Add("0");
            BloodGroups.Add("A+");
            BloodGroups.Add("A-");
            BloodGroups.Add("B+");
            BloodGroups.Add("B-");
            BloodGroups.Add("AB");
        }
        @Html.LabelFor(model => model.BloodGroup, "Kan Grubu", htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.BloodGroup,
                              new SelectList(BloodGroups),
                                     "Cinsiyet")
        </div>
    </div>


    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Hasta listesine geri dön", "Index")
</div>
